{
    "compilerOptions": {
        "target": "ES6",
        "jsx": "react",
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "baseUrl": "./",
        "paths": { 
            "App": ["src/App"],
            "Pages/*": ["src/Pages/*"],
            "Components/*": ["src/Components/*"]
        }
    },
    "exclude": [
        "node_modules"
    ]
}